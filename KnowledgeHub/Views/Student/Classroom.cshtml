@model IEnumerable<KnowledgeHub.Models.GeneratedClassesByEF.StudentRegisteredCours>

@{
    Layout = null;
}


<html>
<head>
    <title>Student Class Room</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/all.css" rel="stylesheet" />
    <link href="~/Content/studentClassroom.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="menu">
                    <img class="logo" src="~/Image/logo1.png">
                    <ul>
                        <li>@Html.ActionLink("HOME", "LadingPage", new { userid = ViewBag.UserID }) </li>
                        <li>@Html.ActionLink("VIEW PROFILE", "ViewProfile", new { id = Model.FirstOrDefault().viewer_id }, new { @target = "_blank" })  @*<a href="/Student/ViewProfile/@Model.Viewer_ID">VIEW PROFILE</a>*@</li>
                        <li>@Html.ActionLink("REGISTRATION", "TeacherRegisterCourse", new { id = Model.FirstOrDefault().viewer_id })</li>
                        <li>@Html.ActionLink("TIME TABLE", "TimeTable", new { id = Model.FirstOrDefault().viewer_id })</li>
                        <li>@Html.ActionLink("CLASS ROOM", "Classroom", new { id = Model.FirstOrDefault().viewer_id })</li>
                        <li>@Html.ActionLink("LATEST NEWS", "LatestNews", new { id = Model.FirstOrDefault().viewer_id })</li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-9">
                <h3>Class Room</h3>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-6">
                            <div class="class1">
                                <a href="#" onclick="openModal(@item.viewer_courseid)">
                                    <div class="class11">
                                        @*<h4>Computer Programing</h4>
                                            <h6>Monday</h6>
                                            <h6>10am - 12am</h6>
                                            <p>Ahmed Raza</p>*@
                                        <h4>@item.viewer_coursename</h4>
                                        <h6>@item.teacher_name</h6>
                                        <h6>@item.timing</h6>
                                        <p>@item.days</p>
                                    </div>
                                </a>
                            </div><br />
                        </div>

                    }

                    @*<div class="col-sm-6">
                            <div class="class2">
                                <a href="#">
                                    <div class="class22">
                                        <h4>Marketing</h4>
                                        <h6>Tuesday</h6>
                                        <h6>12pm - 2pm</h6>
                                        <p>Ahmed Raza</p>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="class3">
                                <a href="#">
                                    <div class="class33">
                                        <h4>Psychology</h4>
                                        <h6>Wednessday</h6>
                                        <h6>2pm - 4pm</h6>
                                        <p>Farhan Bukhari</p>
                                    </div>
                                </a>
                            </div>
                        </div>*@
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="col-md-12">

        <div class="modal" id="ModalCourses" tabindex="-1" style="display:none">
            <div class="modal-dialog">
                <div class="modal-content" style="background:#F7F9FA;height: 236px;">
                    <div class="modal-header" style="background:#F7F9FA">

                        <h4>Course Tutorial URL(s)</h4><span id="btnCloseRFIPU" style="float:right; cursor:pointer;"><img src="~/Image/1024px-Crystal_Clear_action_button_cancel.svg.png" style="width:15px" /></span>

                    </div>
                    <div class="modal-body">
                        <div>
                            <table>
                                <thead>
                                    <tr>
                                        <th>Video URL</th>
                                    </tr>
                                </thead>

                                <tbody class="CourseURLTable"></tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
</html>




<script type="text/javascript">
 
    $(document).ready(function () {

        $("#btnCloseRFIPU").click(function () {
            $("#ModalCourses").hide();
        });
       
    });


    function openModal(id) {
        debugger
       
        var html = '';
        $.ajax({
            url: "/Student/ShowURL",
            data: JSON.stringify({ "CourseId": id }),
            type: "POST",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                debugger
                $.each(result, function (key, item) {
                    debugger
                    html += '<tr>';
                    html += '<td>' + item.CourseName + '</td>';
                    html += '</tr>';

                });
                $(".CourseURLTable").html(html);
                $("#ModalCourses").show();
            },
            error: function () {
                alert("Oops, something wrong happened");
            }
        });


    }


</script>