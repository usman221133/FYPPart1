@model KnowledgeHub.Models.GeneratedClassesByEF.Presenter_Table
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Teacher Dashboard</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/all.css" rel="stylesheet" />
   
    <link href="~/Content/teacherDashboard.css" rel="stylesheet" />
    
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="menu">
                    <img class="logo" src="~/Image/logo1.png">
                    <ul>
                        <li><a href="#">HOME</a></li>
                        <li>@Html.ActionLink("VIEW PROFILE", "ViewProfile", new { id = Model.Presenter_ID },new { @target = "_blank" })  @*<a href="/Student/ViewProfile/@Model.Viewer_ID">VIEW PROFILE</a>*@</li>
                        <li>@Html.ActionLink("REGISTRATION", "TeacherRegisterCourse", new { id = Model.Presenter_ID })</li>
                        <li>@Html.ActionLink("TIME TABLE", "TimeTable", new { id = Model.Presenter_ID })</li>
                        <li>@Html.ActionLink("CLASS ROOM", "Classroom", new { id = Model.Presenter_ID })</li>
                        <li>@Html.ActionLink("LATEST NEWS", "LatestNews", new { id = Model.Presenter_ID })</li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-9">
                <h3>Welcome @Model.Presenter_Name</h3>
                <div class="details">
                    <img class="picture1" src="~/Image/avatar3.png">
                    <a href="/HomeStartPage/Index">Logout</a>
                </div>
                <div class="details2">
                    <h4>My Courses:</h4>
                    @{List<KnowledgeHub.Models.GeneratedClassesByEF.TeacherRegisteredCours> oList = new List<KnowledgeHub.Models.GeneratedClassesByEF.TeacherRegisteredCours>();
                        oList.AddRange(ViewBag.RegCourses);

                        foreach (var item in oList)
                        {
                            <h6>@item.CourseName</h6>
                        }
                    }
                </div>
                <div class="details4">
                    <h4>Announcement!</h4>
                    @{
                        List<KnowledgeHub.Models.GeneratedClassesByEF.Announcemnet> oAnno = new List<KnowledgeHub.Models.GeneratedClassesByEF.Announcemnet>();
                        oAnno.AddRange(ViewBag.AnnoList);
                        if (oAnno.Count > 0)
                        {
                            foreach (var item1 in oAnno)
                            {
                                <div><h6>@item1.Announcement</h6></div>
                            }
                        }
                        else
                        {
                            <h6>No Announcement has been yet!</h6>
                        }
                    }
                  
                </div>
            </div>
        </div>
    </div>
</body>
</html>
