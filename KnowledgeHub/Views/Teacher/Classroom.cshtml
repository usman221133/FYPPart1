@model IEnumerable<KnowledgeHub.Models.GeneratedClassesByEF.TeacherRegisteredCours>

@{
    Layout = null;
}

<!DOCTYPE html>


<html>
<head>
    <title>Teacher Class Room</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/all.css" rel="stylesheet" />
       <link href="~/Content/teacherClassroom.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="menu">
                    <img class="logo" src="~/Image/logo1.png">
                    <ul>
                        <li>@Html.ActionLink("HOME", "LandingPage", new { userid = ViewBag.UserID }) </li>
                        <li>@Html.ActionLink("VIEW PROFILE", "ViewProfile", new { id = Model.FirstOrDefault().TeacherId }, new { @target = "_blank" })  @*<a href="/Student/ViewProfile/@Model.Viewer_ID">VIEW PROFILE</a>*@</li>
                        <li>@Html.ActionLink("REGISTRATION", "TeacherRegisterCourse", new { id = Model.FirstOrDefault().TeacherId })</li>
                        <li>@Html.ActionLink("TIME TABLE", "TimeTable", new { id = Model.FirstOrDefault().TeacherId })</li>
                        <li>@Html.ActionLink("CLASS ROOM", "Classroom", new { id = Model.FirstOrDefault().TeacherId })</li>
                        <li><a href="teacherLatestNews.html">LATEST NEWS</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-9">
                <h3>Class Room</h3>
               
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-6">
                            <div class="class1">
                                <a href="#" onclick="openModal(@item.id)">
                                    <div class="class11">
                                       
                                        <h4>@item.CourseName</h4>
                                        <h6>@item.Days</h6>
                                        <h6>@item.Timing</h6>
                                        <p>@item.TeacherName</p>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }

                    @*<div class="col-sm-6">
                        <div class="class2">
                            <a href="#">
                                <div class="class22">
                                    <h4>Marketing</h4>
                                    <h6>Tuesday</h6>
                                    <h6>12pm - 2pm</h6>
                                    <p>Ahmed Raza</p>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="class3">
                            <a href="#">
                                <div class="class33">
                                    <h4>Psychology</h4>
                                    <h6>Wednessday</h6>
                                    <h6>2pm - 4pm</h6>
                                    <p>Farhan Bukhari</p>
                                </div>
                            </a>
                        </div>
                    </div>*@
                </div>
            </div>
        </div>
    </div>

</body>
</html>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog" style="display:none">
    <div class="modal-dialog" id="myModalDialogue" >

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>



<script type="text/javascript">


    function openModal(id)
    {
        $("#myModal").show();
        //alert(id);
    }


</script>